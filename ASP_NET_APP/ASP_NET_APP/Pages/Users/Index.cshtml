@page
@model ASP_NET_APP.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>ASP.NET WEB APPLICATION - CTSE[SE4010]</h1>

<p class="float-end">
    <a asp-page="Create" class="btn btn-outline-primary">Add New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-success">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-warning">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
